doctype html
html
    block link
    -var menu = {'Home': '/', 'Aufgabe 1': '/ex-1', 'Aufgabe 2': '/ex-2' , 'Aufgabe 3': '/ex-3' , 'Aufgabe 4': '/ex-4' , 'Aufgabe 5': '/ex-5', 'Aufgabe 6': '/ex-6'  };

    head
        title=title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/assets/bootstrap/css/bootstrap.css')
        script(src='/assets/jquery/jquery.js')
        script(src='/assets/jquery-cookie/jquery.cookie.js')
        script(src='/assets/bootstrap/js/bootstrap.js')

        block extraHeader
    body
        nav(class="navbar navbar-default navbar-fixed-top")
            .container-fluid
                .navbar-header
                    button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand" href="#")
                        span(style='font-weight:bold') jsonSchema Tutorial

                #myNavbar(class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                        each val, key in menu
                            if active === key
                                li.active
                                    a(href=val, title=key)= key
                            else
                                li
                                    a(href=val, title=key)= key

        block content

